{
  "compilerOptions": {
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {},
    "incremental": true,
    "skipDefaultLibCheck": true
  },
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "exclude": [
      "**/node_modules/**",
      "**/*test.tsx"
    ]
  },
  "exclude": [
    "node_modules/**",
  ]
}
